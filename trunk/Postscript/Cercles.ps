%!PS-Adobe-3.0
%%BeginFeature: *PageSize A4 
 << /PageSize [595 842] >> setpagedevice 
%%EndFeature 

%/PageSize A4

/CoordX 595 def
/CoordY 842 def
/RadiMax 100 def
/Margin 25 def
/NumThings 600 def

newpath
    Margin Margin moveto
    CoordX Margin sub Margin lineto
    CoordX Margin sub CoordY Margin sub lineto
    Margin CoordY Margin sub lineto
    Margin Margin lineto
closepath
gsave
stroke
grestore
clip

/PodemDibuixar
{
    % la pila té xn yn rn xn-1 yn-1 rn-1
    exch 	% ara té xn yn rn xn-1 rn-1 yn-1
    4 index 	% ara té xn yn rn xn-1 rn-1 yn-1 yn
    sub dup mul	% ara té xn yn rn xn-1 rn-1 (yn-1-yn)^2
    3 1 roll    % ara té xn yn rn (yn-1-yn)^2 xn-1 rn-1
    exch	% ara té xn yn rn (yn-1-yn)^2 rn-1 xn-1
    5 index 	% ara té xn yn rn (yn-1-yn)^2 rn-1 xn-1 xn
    sub dup mul
    exch	% ara té xn yn rn (yn-1-yn)^2 (xn-xn-1)^2 rn-1
    3 1 roll	% ara té xn yn rn rn-1 (yn-1-yn)^2 (xn-xn-1)^2 
    add sqrt	% ara té xn yn rn rn-1 d(C_n, C_{n-1})
    exch	% ara té xn yn rn d(C_n, C_{n-1}) rn-1
    2 index	% ara té xn yn rn d(C_n, C_{n-1}) rn-1 rn
    add
    gt
    {true}{false} ifelse
    % la pila no ha perdut elements
} def



realtime srand
1 1 NumThings {
    /n exch def    	% comptador del nombre de cercles
    rand
    CoordX mod
    rand
    CoordY mod		% dos enters entre 0 i 500 per les coordenades
    rand
    RadiMax mod 2 add 	% un enter entre 1 i 100 pel radi
    true
    1 1 n 1 sub {
	exch
	n 3 mul 2 add 1 roll % enviem el true per defecte al fons de la pila de
	    % coordenades, o bé el true anterior
	    % ara la pila conté els punts i "m"
	3 mul 4 add	% comencem per l'element del final de la pila, i afegim
			% els "m". Recorda, index no compta l'element
	dup dup		% ens calen 3 d'aquests
	index		% ara la pila té xn yn rn 3m+6 3m+6 xn-1
	3 1 roll	% ara la pila té xn yn rn xn-1 3m+6 3m+6
	1 sub
	index		% ara la pila té xn yn rn xn-1 3m+6 yn-1
	exch		% ara la pila té xn yn rn xn-1 yn-1 3m+6
	2 sub
	index		% ara la pila té xn yn rn xn-1 yn-1 rn-1
        PodemDibuixar
    }for
    % ara a la pila tenim n-1 true/false i 3n punts, seguits d'un true/false
   
    n 1 eq {} {
	3 n mul 1 add 1 roll    % ara tots els t/f junts
	n 4 mul 3 n mul roll	% ara els true false davant
	n 1 sub {and} repeat} ifelse
    
    {
	3 copy
	newpath
	0 360 arc
	closepath
	stroke
    }
    {
	3 {pop} repeat
	3 copy
    }
    ifelse
} for
showpage

